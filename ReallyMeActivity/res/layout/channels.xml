<?xml version="1.0" encoding="utf-8"?>

<!-- The top view is a layout manager that places its child views into
     a row, here set to be vertical (so the first is at the top) -->
<!-- START CHANNELS BLOCK-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/channels"
    android:layout_width="wrap_content"
    android:layout_height="90dip"
    android:orientation="horizontal">

    <ImageView android:id="@+id/p_talk" style="@style/channelImage"
        android:src="@drawable/btn_talk_disabled" />

    <ImageView android:id="@+id/p_text" style="@style/channelImage"
        android:src="@drawable/btn_text_disabled" />

    <ImageView android:id="@+id/p_post" style="@style/channelImage"
        android:src="@drawable/btn_post_disabled" />

</LinearLayout>
<!-- END CHANNELS BLOCK-->