<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.ActionButton</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.ActionButton">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="TextTransparent">
        <item name="android:textColor">#0000</item>
    </style>
    <!-- START CHANNELS -->
    <style name="channelImage">
        <item name="android:layout_width">72dip</item>
        <item name="android:layout_height">72dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- END CHANNELS -->
    <style name="WindowTitleBackground">
        <item name="android:background">@drawable/brandingbar</item>
    </style>
    <style name="CustomTheme">
        <item name="android:windowTitleSize">25px</item>
        <item name="android:windowTitleStyle">@style/TextTransparent</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>
    <!-- START BASE LIST ITEM STYLES-->
    <style name="TextViewSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14px</item>
        <item name="android:paddingLeft">3px</item>
    </style>
</resources>

